<h2>Edit <%= @recipe.name %></h2>

<%= form_tag recipe_path, method: :patch do %>
  <%= label_tag "recipe[name]", "Name" %><br>
  <%= text_field_tag "recipe[name]", @recipe.name %><br>
  <%= label_tag "recipe[time]", "Preparation time" %><br>
  <%= text_field_tag "recipe[time]", "#{@recipe.time_number} #{@recipe.time_units}"%><br>
  <h5><b>Edit Ingredients</b></h5>
  <% @recipe_ingredients.each do |r_i| %>
  <%= text_field_tag "recipe[ingredients][#{r_i.id}][quantity]", r_i.quantity  %>
  <%= text_field_tag "recipe[ingredients][#{r_i.id}][unit]", r_i.unit ? "#{r_i.unit}" : "", placeholder: "units" %>
  <%= text_field_tag "recipe[ingredients][#{r_i.id}][ingredient]", r_i.ingredient.name %><br>
  <% end %>
  <%= label_tag "recipe[new_ingredients]", "Add new ingredients" %><br>
  <%= text_area_tag "recipe[new_ingredients]", "", placeholder: "Example: 1 cup flour, 2 pounds butter, number unit ingredient, got it? Great!" %><br>
  <%= label_tag "recipe[instructions]", "Instructions" %><br>
  <%= text_area_tag "recipe[instructions]", @recipe.instructions %> <br>
  <%= label_tag "recipe[servings]", "Serves" %><br>
  <%= text_field_tag "recipe[servings]", @recipe.servings, placeholder: "1" %><br>
  <%= submit_tag "Save Recipe", class: "btn btn-default" %>
<% end %>
<%= link_to "Delete this recipe", @recipe, method: :delete, class: "btn btn-default"%>
